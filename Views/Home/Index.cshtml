        <a class="btn btn-cedarchest" asp-area="" asp-controller="Burials" asp-action="Index">Our Database</a>
        <a class="btn btn-brownsugar" href="https://byu.maps.arcgis.com/apps/CEWebViewer/viewer.html?3dWebScene=b97ad484af45498cacabc2bb9d43390b">Mummy Map</a>
    </div>
}

