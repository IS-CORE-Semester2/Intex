@model IndexViewModel
@inject SignInManager<IdentityUser> signInManager;

@{
    ViewData["Title"] = "Bio Samples";
    ViewData["Description"] = "Excavated mummies that have been brought back to BYU";

    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section masthead{
    <partial name="_BigOlPicturesPartial" />
}

@section header{
    <script src="https://code.jquery.com/jquery-2.2.4.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#demo").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#test tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
}

@if (signInManager.IsSignedIn(User) && (User.IsInRole("Admin") || (User.IsInRole("Researcher"))))
{
    <a class="btn btn-egyptianblue m-1" asp-action="Create">Add New Entry</a>
    <br />
}

<br />

<div class="container">
    <h5>Quick filter for data on this page</h5>
    <input class="form-control" id="demo" type="text" placeholder="Enter your search term here...">
    <br />

    <div class="card">
        <div class="card-header" id="headingOne">
            <h5 class="mb-0">
                <a class="btn" asp-area="" asp-controller="BioSamples" asp-action="AllData">You can also filter on all Bio Sample data by clicking here</a>
            </h5>
        </div>
    </div>

        <br />

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Rack Number</th>
                    <th>Burial Subplot</th>
                    <th>Burial Number</th>
                    <th>Date</th>
                    <th></th>
                </tr>
            </thead>
            <tbody id="test">
                @foreach (var item in Model.BioSamples)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.RackNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BurialSubplot)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BurialNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Date)
                        </td>
                        <td>
                            @if (signInManager.IsSignedIn(User) && (User.IsInRole("Admin") || (User.IsInRole("Researcher"))))
                            {
                                <a asp-action="Edit" asp-route-id="@item.BioSampleId" class="btn btn-secondary m-1" style="width: 80px">Edit</a>
                            }

                            <a asp-action="Details" asp-route-id="@item.BioSampleId" class="btn btn-brownsugar m-1" style="width: 80px">Details</a>
                            @if (signInManager.IsSignedIn(User) && User.IsInRole("Admin"))
                            {
                                <a asp-action="Delete" asp-route-id="@item.BioSampleId" class="btn btn-cedarchest m-1" style="width: 80px">Delete</a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="text-center">
        <div page-model="@Model.PagingInfo"
             page-classes-enabled="true"
             page-class="btn"
             page-class-normal="btn-outline-dark"
             page-class-selected="btn-egyptianblue"
             class="btn-group pull-right m-1"></div>
    </div>
